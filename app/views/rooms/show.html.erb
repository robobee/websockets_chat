<div class="col-lg-8">

  <div class="page-header">
    <h1><%= @room.name %></h1>
  </div>

  <% @room.messages.each do |msg| %>
    <div class="media">
      <div class="media-left media-middle">
        <img class="media-object" src="http://lorempixel.com/64/64/people/">
      </div>
      <div class="media-body">
        <h4 class="media-heading"><%= msg.user.email %>,<small> <%= msg.created_at %></small></h4>
        <p><%= msg.text %></p>
      </div>
    </div>
  <% end %>

  <div class="small-top-margin">
    <%= form_for [@room, Message.new] do |f| %>
      <div class="input-group">
        <%= f.text_field :text, class: "form-control", placeholder: "Type a message..." %>
        <span class="input-group-btn">
          <%= f.submit "Send", class: "btn btn-default" %>
        </span>
      </div>
    <% end %>
  </div>

</div>
